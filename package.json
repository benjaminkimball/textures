{
  "private": true,
  "name": "textures",
  "version": "3.0.0",
  "description": "Recreating textures.js (https://riccardoscalco.it/textures/) in React.",
  "scripts": {
    "build": "parcel build src/index.html --out-dir docs --public-url /textures",
    "format": "prettier --write 'src/**/*'",
    "lint": "eslint 'src/**/*.{js,jsx}'",
    "publish": "rimraf docs && npm run lint && npm run build",
    "start": "parcel src/index.html"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:benjaminkimball/textures.git"
  },
  "author": "Benjamin Kimball <hello@benjaminkimball.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/benjaminkimball/textures/issues"
  },
  "homepage": "https://github.com/benjaminkimball/textures#readme",
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.5",
    "eslint-plugin-react-hooks": "^2.5.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.1",
    "parcel-bundler": "^1.12.4",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2"
  }
}
